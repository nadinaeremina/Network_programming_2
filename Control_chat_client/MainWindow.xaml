<Window x:Class="Control_chat_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Control_chat_client"
        mc:Ignorable="d"
        Title="User" Height="450" Width="800">
    <Grid>
        <StackPanel Width="500">
            <Button Width="150" Height="100" Click="Button_Click">Start chatting with bot</Button>
            <StackPanel Name="main_panel" Visibility="Visible">
                <TextBlock HorizontalAlignment="Center">Response from bot:</TextBlock>
                <TextBox x:Name="txt_output" Height="120"></TextBox>
                <TextBlock HorizontalAlignment="Center">Choose your question:</TextBlock>
                <ComboBox x:Name="txt_mes"></ComboBox>
                <Button Click="Button_Click_1">SEND</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
