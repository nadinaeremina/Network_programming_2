<Window x:Class="Control_chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Control_chat"
        mc:Ignorable="d"
        Title="Bot" Height="450" Width="800">
    <Grid>
        <StackPanel Width="500">
            <Button Width="100" Height="100" Click="Button_Click">Start the server</Button>
            <TextBlock HorizontalAlignment="Center">OUTPUT</TextBlock>
            <TextBox x:Name="txt_output"></TextBox>
            <TextBlock HorizontalAlignment="Center">MESSAGE</TextBlock>
            <TextBox x:Name="txt_mes"></TextBox>
            <Button Click="Button_Click_1">SEND</Button>
        </StackPanel>
    </Grid>
</Window>
