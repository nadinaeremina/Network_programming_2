<Window x:Class="Chat_Listener_Client_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat_Listener_Client_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button x:Name="btn_client" Click="btn_client_Click">Client</Button>
        <Button x:Name="btn_server" Click="btn_server_Click">Server</Button>
        <TextBox x:Name="txt_data"></TextBox>
        <TextBox x:Name="txt_answer"></TextBox>
    </StackPanel>
</Window>
